<tr>
  <td>
    <%= idea.user %>
  </td>

  <td>
    <%= idea.name %>
  </td>

  <td>
    <%= idea.ancestry %>
  </td>

  <td>
    <%= idea.description %>
  </td>

  <td>
    <%= idea.private %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to idea, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_idea_url(idea), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to idea, method: :delete, data: { confirm: "Do you really want to delete this idea?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
