<%= link_to idea, class: "list-group-item list-group-item-action d-flex align-items-center justify-content-between" do %>
  <div>
    Idea #<%= idea.id %>

    <small class="text-muted">
      <%= time_ago_in_words(idea.updated_at) %> ago
    </small>
  </div>

  <span class="btn btn-sm btn-outline-secondary">
    <i class="fas fa-chevron-right fa-fw"></i>
  </span>
<% end %>
