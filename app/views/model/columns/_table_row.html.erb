<tr>
  <td>
    <%= model_column.name %>
  </td>

  <td>
    <%= model_column.data_type %>
  </td>

  <td>
    <%= model_column.model %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to model_column, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_model_column_url(model_column), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to model_column, method: :delete, data: { confirm: "Do you really want to delete this model_column?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
