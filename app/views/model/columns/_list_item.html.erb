<%= link_to model_column, class: "list-group-item list-group-item-action d-flex align-items-center justify-content-between" do %>
  <div>
    Model Column #<%= model_column.id %>

    <small class="text-muted">
      <%= time_ago_in_words(model_column.updated_at) %> ago
    </small>
  </div>

  <span class="btn btn-sm btn-outline-secondary">
    <i class="fas fa-chevron-right fa-fw"></i>
  </span>
<% end %>
